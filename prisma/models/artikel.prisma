model Artikel {
  id          BigInt  @id @default(autoincrement())
  judul       String
  slug        String  @unique
  kategori    String
  penulis     String  @default("Admin")
  isi         String  @db.Text
  gambar      String
  is_featured Boolean @default(false)
  dibaca      Int     @default(0)

  created_at DateTime? @default(now())
  updated_at DateTime? @updatedAt

  @@map("artikels")
}
